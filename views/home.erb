<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% each_chapter do |chapter| %>
      <li class="pure-menu-item">
        <a href="/chapters/<%= chapter[:number] %>" class="pure-menu-link">
            <%= "#{chapter[:number]}: #{chapter[:name]}" %>
        </a>
      </li>
    <% end %>
  </ul>
</div>
